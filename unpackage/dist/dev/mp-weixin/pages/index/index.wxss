.content {
  background: #F0F3F5;
}
.content .start-img {
    width: 750rpx;
    height: 100vh;
    position: absolute;
    top: 0;
    z-index: 98;
}
.head {
  padding-bottom: 60rpx;
  background: white;
}
.head .bg {
    position: absolute;
    top: 0;
    height: 589rpx;
    width: 750rpx;
    z-index: 0;
}
.head .text-area {
    margin-top: 60rpx;
    padding: 0 30rpx;
    position: relative;
    z-index: 1;
}
.head .text-area .title {
      font-size: 46rpx;
      color: white;
}
.head .text-area .subscribe {
      font-size: 23rpx;
      color: #cccccc;
}
.head .text-area .cover-img {
      width: 670rpx;
      height: 860rpx;
      display: block;
      margin: 0 auto;
      margin-top: 50rpx;
}
.head .text-area .buttons {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-justify-content: space-around;
          -ms-flex-pack: distribute;
              justify-content: space-around;
      margin-top: 40rpx;
}
.head .text-area .buttons .button-2 {
        color: white;
        background: black;
}
.head .text-area .buttons .button-2-hover {
        color: #C8C7CC;
}
.main {
  background: white;
  margin-top: 20rpx;
  padding: 0 30rpx;
  position: relative;
}
.main .userinfo-button {
    position: absolute;
    top: 0;
    left: 240rpx;
    width: 500rpx;
    opacity: 0;
}
.main .tab {
    text-align: center;
    color: #666666;
    font-size: 28rpx;
    height: 100rpx;
}
.main .tab .wuc-tab-item {
      margin: 0 40rpx;
      font-weight: bold;
}
.main .tab-select {
    color: black;
}
.main .main-scoll {
    height: 500rpx;
}
.main .main-scoll ::-webkit-scrollbar {
      width: 0;
      height: 0;
      color: transparent;
}
.main .magazines {
    border-top: 1rpx solid #e6e6e6;
    padding-top: 30rpx;
